# turn verbose output of solver (here CGInverseOperator) on/off
# for general verbosity see ../../parameters/parameter
fem.solver.verbose: 1

# macro grid file
fem.io.macroGridFile_1d: ../../macrogrids/unitcube1.dgf
fem.io.macroGridFile_2d: ../../macrogrids/unitcube2.dgf
fem.io.macroGridFile_3d: ../../macrogrids/unitcube3.dgf

# preconditioning for ISTL solver 
# (available: none, ssor, sor, ilu-0, ilu-n, gauss-seidel, jacobi ) 
istl.preconditioning.method: ilu-0
istl.preconditioning.iterations: 2
istl.preconditioning.relaxation: 0.9 

# available problem types ( laplace, rotatinganisotropy, sphere )
#femhowto.problemtype: rotatinganisotropy
femhowto.problemtype: laplace

# available problems (sin cos alberta corner)
# !! problem type for corner function is the laplace problem, changes in the problem
# !! type for this function will not effect the problem type used in the code
femhowto.problemsolution: alberta

# valid values are: none , generic, callback (only AlbertaGrid and ALUGrid)
fem.adaptation.method: generic 

# tolerance for estimator 
femhowto.tolerance: 0.5

# output format: grape | vtk-cell | vtk-vertex (projected in DG case)
fem.io.outputformat: vtk-vertex

# include parameter file from common (sets eoc loop and output parameters)
paramfile: ../../parameters/parameter
